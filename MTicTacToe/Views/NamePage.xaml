<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MTicTacToe.Views.NamePage"
             Title="Select Name">
    <VerticalStackLayout>
        <Label 
            Text="Input player name below:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry
            x:Name="InputField"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button 
            Text="Continue"
            Clicked="InputName"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>